doctype html
html
  head
    title= title
  body
    h1 Update Custom Object
    form(action="/update-cobj" method="POST")
      label(for="name") University Name:
      input(type="text" name="name" required)
      br
      label(for="city") City:
      input(type="text" name="city" required)
      br
      label(for="state") State:
      input(type="text" name="state" required)
      br
      label(for="number_of_students") Number of Students:
      input(type="number" name="number_of_students" required)
      br
      button(type="submit") Submit
    br
    a(href="/") Return to the homepage
